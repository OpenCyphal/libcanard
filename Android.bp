cc_defaults {
    name: "libcanard_defaults",
    shared_libs: [
    ],
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
    ],
}

cc_defaults {
    name: "libcanard_v1_0_target_defaults",
    defaults: ["libcanard_defaults"],
}

cc_library_headers {
    name: "libcanard_v1_0_common_headers",
    vendor: true,
    export_include_dirs: ["libcanard"],
}

// canard uavcan reference implementation lib
cc_library {
    name: "canard@1.0-lib",
    vendor: true,
    defaults: ["libcanard_v1_0_target_defaults"],
    srcs: [
        "libcanard/canard.c",
        "libcanard/canard_dsdl.c",
    ],
    export_include_dirs: ["libcanard"],
}
